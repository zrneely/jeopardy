{
    "compilerOptions": {
        "incremental": true,
        "target": "es6",
        "module": "es6",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "build-tsc",
        "sourceMap": true,
        "strict": true,
        "jsx": "react"
    },
    "files": [
        "./ts/index.tsx",
    ]
}